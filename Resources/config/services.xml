<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
        <parameter key="brysn_formmetadata.form.extension.class">Brysn\FormMetadataBundle\FormExtension</parameter>
        <parameter key="brysn_formmetadata.metadata.annotation_driver.class">Brysn\FormMetadataBundle\Metadata\Driver\AnnotationDriver</parameter>
        <parameter key="brysn_formmetadata.metadata.cache.class">Metadata\Cache\FileCache</parameter>
        <parameter key="brysn_formmetadata.metadata.factory.class">Metadata\MetadataFactory</parameter>
	</parameters>

    <services>
        <service id="brysn_formmetadata.form.extension" class="%brysn_formmetadata.form.extension.class%">
            <argument type="service" id="service_container" />
            <argument type="service" id="brysn_formmetadata.metadata.factory" />
            <!-- All services with tag "brysn.form_metadata.event_subscriber" are inserted here by FormExtensionCompilerPass -->
            <argument type="collection" />
            <!-- All services with tag "brysn.form_metadata.model_transformer" are inserted here by FormExtensionCompilerPass -->
            <argument type="collection" />
            <!-- All services with tag "brysn.form_metadata.view_transformer" are inserted here by FormExtensionCompilerPass -->
            <argument type="collection" />
        </service>
        <service id="brysn_formmetadata.metadata.annotation_driver" class="%brysn_formmetadata.metadata.annotation_driver.class%" public="false">
            <argument type="service" id="annotation_reader" />
        </service>
        <service id="brysn_formmetadata.metadata.factory" class="%brysn_formmetadata.metadata.factory.class%" public="false">
            <argument type="service" id="brysn_formmetadata.metadata.annotation_driver" />
            <call method="setCache">
                <argument type="service" id="brysn_formmetadata.metadata.cache" />
            </call>
        </service>
        <service id="brysn_formmetadata.metadata.cache" class="%brysn_formmetadata.metadata.cache.class%" public="false">
            <argument>%kernel.cache_dir%/brysn/form_metedata</argument>
        </service>
    </services>
</container>