<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="form_metadata.reader.annotation.class">Brysn\FormMetadataBundle\Driver\AnnotationsDriver</parameter>
        <parameter key="form_metadata.extension.class">Brysn\FormMetadataBundle\FormExtension</parameter>
	</parameters>

    <services>
		<service id="form_metadata.driver.annotation" class="%form_metadata.reader.annotation.class%"/>
        <service id="form_metadata.extension" class="%form_metadata.extension.class%">
            <call method="addDriver">
                <argument type="service" id="form_metadata.driver.annotation" />
            </call>
        </service>
    </services>
</container>